@{
    ViewData["Title"] = "User Add Task";
}
<script type="text/javascript" src="~/js/AddTask.js"></script>
<script>
    var fullUrl = '@Url.Content("~")';
</script>

<partial name="UserNavBar"/>

<h2 align="center">Add Task</h2>
<div>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-3">
                <input class="form-control" type="text" id="taskName"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Start Time:</label>
            <div class="col-sm-3">
                <input class="form-control" type="time" id="startTime" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">End Time:</label>
            <div class="col-sm-3">
                <input class="form-control" type="time" id="endTime"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Task Date:</label>
            <div class="col-sm-3">
                <input class="form-control" id="taskDate" type="date" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Recurring:</label>
            <div class="col-sm-3">
                <input type="checkbox" id="recurringCheck" name="RecurringCheckbox" onchange="toggleRecurring()" />
            </div>
        </div>
        <div class="form-group hidden" id="recurringDays">
            <label class="col-sm-2 control-label">Select Day(s):</label>
            <div class="col-sm-10">
                <label class="checkbox-inline">
                    <input type="checkbox" id="sunChkBox" /> Sun
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" id="monChkBox" /> Mon
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" id="tueChkBox" /> Tue
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" id="wedChkBox" /> Wed
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" id="thrChkBox" /> Thr
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" id="friChkBox" /> Fri
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" id="satChkBox" /> Sat
                </label>
            </div>
            <label class="col-sm-2 control-label">Select day to end Recurring:</label>
            <div class="col-sm-3">
                <input class="form-control" type="date" id="recurringEndDate" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success" id="addTaskBtn" onclick="return addTask()" >Submit</button>
            </div>
        </div>
    </form>
</div>