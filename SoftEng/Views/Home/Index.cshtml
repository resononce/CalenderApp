@{
    ViewData["Title"] = "Home Page";
}
<script type="text/javascript" src="~/js/Register.js"></script>
<script>
    var url = '@Url.Action("Register", "Home")';
    var home = '@Url.Action("Main", "Home")';
</script>
<div>
    <h1>Calendar Application</h1>
    Username: <input type="text" id="usernameText" name="Username" /><br />
    Password: <input type="password" id="passwordText" name="Password" /><br />
    Check to Register: <input type="checkbox" id="registerCheckbox" name="RegisterCheckbox" onchange="toggleRegisterLogin()" /> <br />
    <div id="registerFields" class="hidden">
        Re-enter Password: <input type="password" id="passwordTextAgain" name="PasswordAgain" /><br />
        <input type="button" id="registerBtn" name="register" value="Register" onclick="Register()" /> <br />
    </div>
    <input type="button" id="userLoginBtn" name="user" value="User Login" onclick="Validate()" />
</div>

<script>
    function Validate() {
    $.ajax(
        {
            type: "POST",
            url: '@Url.Action("Validate", "Home")',
            data: {
                username: $('#usernameText').val(),
                password: $('#passwordText').val()
            },
            error: function (result) {
                alert("There is a Problem, Try Again! ");
            },
            success: function (result) {
                console.log(result);
                if (result.status == true) {
                    window.location.href = '@Url.Action("Main", "Home")';
                }
                else {
                    alert(result.message);
                }
            }
        });
}



</script>