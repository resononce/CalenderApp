@{
    ViewData["Title"] = "Home Page";
}
<script type="text/javascript" src="~/js/Register.js"></script>
<script>
    var fullUrl = '@Url.Content("~")';
</script>
<div align="center">
    <h1>Calendar Application</h1>
</div>

<div>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label">Username:</label>
            <div class="col-sm-3">
                <input class="form-control" type="text" id="usernameText"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Password:</label>
            <div class="col-sm-3">
                <input class="form-control" type="password" id="passwordText"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Check Yes to Register:</label>
            <div class="col-sm-3">
                <label class="checkbox-inline">
                    <input type="checkbox" id="registerCheckbox" onchange="toggleRegisterLogin()"/> Yes
                </label>
            </div>
        </div>
        <div class="hidden" id="registerFields">
            <div class="form-group">
            <label class="col-sm-3 control-label">Re-enter Password:</label>
            <div class="col-sm-3">
                <input class="form-control" type="password" id="passwordTextAgain"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-3">
                <button type="button" class="btn btn-primary" id="registerBtn" onclick="Register()">Register</button>
            </div>
        </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-3">
                <button type="button" class="btn btn-success" id="userLoginBtn" onclick="Validate()">User Login</button>
            </div>
        </div>
    </form>
</div>