@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Calendar Application</h1>
    Username: <input type="text" id="usernameText" name="Username"/><br />
    Password: <input type="text" id="passwordText" name="Password" /><br />
    <input type="button" id="userLoginBtn" name="user" value="User Login" onclick="Validate()"/>
    <input type="button" id="adminLoginBtn" name="admin" value="Admin Login" onclick="Validate()"/> <br />
    <input type="button" id="registerBtn" name="register" value="Register" onclick="Validate()"/> <br />
</div>

<script> 
  function Validate() {
    $.ajax(
    {
      type: "POST",
      url: '@Url.Action("Validate", "Home")',
      data: {
          username: $('#usernameText').val(),
          password: $('#passwordText').val()
      },
      error: function (result) {
        alert("There is a Problem, Try Again!");
      },
      success: function (result) {
        console.log(result);
        if (result.status == true) {
          window.location.href = '@Url.Action("Index", "Home")';
        }
        else {
          alert(result.message);
        }
      }
    });
  }
</script>